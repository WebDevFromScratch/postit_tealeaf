<div class="well">
  <%= form_for @post do |f| %>
    <div class='control-group'>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>    
    <div class='control-group'>
      <%= f.label :url %>
      <%= f.text_field :url %>
    </div>
    <div class='control-group'>
      <%= f.label :description %>
      <%= f.text_area :description, size: "10x10" %>
    </div>
    <%= f.submit action_description, class: 'btn btn-primary' %>
  <% end %>
</div>