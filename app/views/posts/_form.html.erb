<div>
<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  </br>
  <%= f.label :url %>
  <%= f.text_field :url %>
  </br>
  <%= f.label :description %>
  <%= f.text_area :description, size: "10x10" %>
  <br/>
  <%= f.submit action_description, class: 'btn btn-primary' %>
<% end %>
</div>