<%= render 'shared/content_title', title: "Login" %>

<% if logged_in? %>
  <%= render 'shared/logged_in_error', message: "You're already logged in!" %>
<% else %>
  <div class="well">
    <%= form_tag '/login', method: 'post' do %>
      <div class='control-group'>
        <%= label_tag :username %>
        <%= text_field_tag :username %>
      </div>    
      <div class='control-group'>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
      <%= submit_tag "Log In", class: 'btn btn-primary' %>
    <% end %>
  </div>
<% end %>